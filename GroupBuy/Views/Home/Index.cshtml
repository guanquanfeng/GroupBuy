@model IEnumerable<GroupBuy.Models.Product>

@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <h2>Categories</h2>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">

            <div class="item active">
                <a  href="@Url.Action("Index", "Menu", new {id = 8 })">
                    <img src="~/Content/vegetables.jpg" alt="Los Angeles" style="width:100%;">
                    <div class="carousel-caption">
                        <h1>Vegetable</h1>
                    </div>
                </a>
            </div>
            
            <div class="item">
                <a href="@Url.Action("Index", "Menu", new {id = 7 })">
                    <img src="~/Content/bakery.jpg" alt="Chicago" style="width:100%;">
                    <div class="carousel-caption">
                        <h1>Bakery</h1>
                    </div>
                </a>
                    
            </div>
            <div class="item">
                <a href="@Url.Action("Index", "Menu", new {id = 10 })">
                    <img src="~/Content/fruits.jpg" alt="Los Angeles" style="width:100%;">
                    <div class="carousel-caption">
                        <h1>Fruit</h1>
                    </div>
                </a>
            </div>
            <div class="item">
                <a href="@Url.Action("Index", "Menu", new {id = 9 })">
                    <img src="~/Content/meats.jpg" alt="New York" style="width:100%;">
                    <div class="carousel-caption">
                        <h1>Meat</h1>
                    </div>
                </a>
            </div>


        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <h2>Recommend</h2>
    <div class="container border">
        @{
            foreach (var item in Model)
            {
                <div class="col-sm-4 col-lg-4 col-md-4" style="padding-top: 15px">
                    <div class="thumbnail">
                        <a href="@Url.Action("Details", "Products", new { id = item.Id})">
                            <img src=@item.ImageUrl alt="" style="width:100%" />
                        </a>
                        <div class="caption">
                            <h3 class="pull-right">@item.Price.ToString("c")</h3>

                            <h4>
                                <a href="@Url.Action("Details", "Products", new { id = item.Id})">@item.Name</a>

                            </h4>
                        </div>
                        <br />
                        
                        <div class="addToCart text-center">
                            
                            <a href="@Url.Action("Add", new {id = @item.Id})" class="btn btn-info" role="button">Add to Cart</a>
                        </div>
                    </div>
                </div>
            }
        }

    </div>
</div>


